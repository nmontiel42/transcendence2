{
  "compilerOptions": {
    "target": "ES6",
    "module": "amd",  // Usamos ESNext para los m√≥dulos en el frontend
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outFile": "../dist/frontend/output.js",  // Directorio de salida para los archivos compilados del frontend
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "backend/**/*"
  ]
}
