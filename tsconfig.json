{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",  // Directorio de salida para todos los archivos compilados
      "resolveJsonModule": true
    },
    "include": [
      "frontend/**/*.ts",
      "backend/**/*.ts"
    ]
  }
  